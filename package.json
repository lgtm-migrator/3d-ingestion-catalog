{
  "name": "3d-ingestion-catalog",
  "version": "2.0.0",
  "description": "A restful API for saving and querying 3d metadata",
  "main": "./src/index.ts",
  "scripts": {
    "test:unit": "npm run bundleOpenApi && npm run generate-record-entity && jest --config=./tests/configurations/unit/jest.config.js",
    "test:integration": "jest --config=./tests/configurations/integration/jest.config.js",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prelint:fix": "npm run format:fix && npm run generate-record-entity",
    "prelint": "npm run format && npm run generate-record-entity",
    "lint:openapi": "openapi lint ./openapi3.yaml",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "release": "standard-version",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "migration:create": "npm run typeorm migration:generate -- -n v2Profile",
    "migration:run": "npm run typeorm migration:run",
    "migration:revert": "npm run typeorm migration:revert",
    "schema:sync": "npm run typeorm schema:sync",
    "test": "npm run test:unit && npm run test:integration",
    "prebuild": "npm run clean && npm run generate-record-entity",
    "build": "tsc --project tsconfig.build.json && npm run bundleOpenApi && npm run assets:copy",
    "start": "npm run build && cd dist && node ./index.js",
    "start:ts": "ts-node ./src/index.ts",
    "assets:copy": "copyfiles -f ./config/* ./dist/config && copyfiles -f ./bundledApi.yaml ./dist/ && copyfiles ./package.json dist",
    "clean": "rimraf dist bundledApi.yaml ./src/metadata/models/generated.ts",
    "install": "npx husky install",
    "copySchema": "copyfiles -u 5 \"./node_modules/@map-colonies/mc-model-types/Schema/yaml/**/*\" ./Schema",
    "generate-record-entity": "code-generator -p 3d -gt orm -tf src/metadata/models/generated.ts",
    "prebundleOpenApi": "npm run copySchema",
    "bundleOpenApi": "openapi bundle --output ./bundledApi.yaml --ext yaml ./openapi3.yaml",
    "postbundleOpenApi": "rimraf Schema"
  },
  "directories": {
    "test": "tests"
  },
  "author": "MapColonies",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@godaddy/terminus": "^4.9.0",
    "@map-colonies/code-generator": "^1.5.0",
    "@map-colonies/error-express-handler": "^2.0.0",
    "@map-colonies/express-access-log-middleware": "0.0.3",
    "@map-colonies/js-logger": "0.0.3",
    "@map-colonies/mc-model-types": "^12.0.3",
    "@map-colonies/openapi-express-viewer": "^2.0.1",
    "@map-colonies/read-pkg": "0.0.1",
    "@map-colonies/telemetry": "^3.1.0",
    "@opentelemetry/api": "^1.0.3",
    "@opentelemetry/api-metrics": "^0.26.0",
    "@opentelemetry/instrumentation-express": "^0.25.0",
    "@opentelemetry/instrumentation-http": "^0.26.0",
    "@turf/turf": "^6.5.0",
    "compression": "^1.7.4",
    "config": "^3.3.6",
    "express": "^4.17.1",
    "express-openapi-validator": "^4.10.9",
    "http-status-codes": "^2.1.4",
    "js-yaml": "^3.14.1",
    "pg": "^8.5.1",
    "randexp": "^0.5.3",
    "reflect-metadata": "^0.1.13",
    "terraformer-wkt-parser": "^1.2.1",
    "tsyringe": "^4.4.0",
    "typeorm": "^0.2.31",
    "uuid": "^8.3.2",
    "wellknown": "^0.5.0",
    "wicket": "^1.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^10.0.0",
    "@map-colonies/eslint-config": "^3.1.1",
    "@map-colonies/prettier-config": "0.0.1",
    "@map-colonies/standard-version-update-helm-version": "^2.0.1",
    "@map-colonies/standard-version-update-openapi3-version": "0.0.2",
    "@redocly/openapi-cli": "^1.0.0-beta.25",
    "@types/compression": "^1.7.2",
    "@types/config": "0.0.36",
    "@types/express": "^4.17.8",
    "@types/faker": "^5.1.7",
    "@types/jest": "^26.0.19",
    "@types/js-yaml": "^3.12.5",
    "@types/multer": "^1.4.7",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.1",
    "@types/wellknown": "^0.5.3",
    "@types/yamljs": "^0.2.31",
    "better-sqlite3": "^7.4.3",
    "commitlint": "^9.1.2",
    "copyfiles": "^2.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.17.0",
    "faker": "^5.4.0",
    "glob": "^7.2.0",
    "husky": "^8.0.1",
    "install": "^0.13.0",
    "jest": "^26.6.3",
    "jest-create-mock-instance": "^1.1.0",
    "jest-html-reporters": "^2.0.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.1",
    "supertest": "^6.0.1",
    "ts-jest": "^26.3.0",
    "ts-node": "^10.8.0",
    "typescript": "^4.4.3"
  }
}
